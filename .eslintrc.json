{
  "env": {
    "node": true,
    "jest": true
  },
  "parser": "babel-eslint",
  "extends": [
    "airbnb-base",
    "prettier"
  ],
  "plugins": [
    "prettier"
  ],
  "settings": {
    "import/resolver": {
      "babel-module": {}
    }
  },
  "rules": {
    "no-underscore-dangle": 0,
    "import/no-extraneous-dependencies": ["error", {
      "devDependencies": true
    }],
    "prettier/prettier": ["error", {
      "singleQuote": true,
      "parser": "flow"
    }],
    "comma-dangle": ["error", "never"],
    "no-console": 0,
    "no-param-reassign": ["error", {
      "props": false
    }]
  }
}
