/* Tabs
 ========================================================================= */

// Tab set
{
  "class": "tabset_control",
  "layer0.texture": "",
  "layer0.tint": [{{ toRgb(ui.colors.tabs.background) }}],
  "layer0.inner_margin": 0,
  "layer0.opacity": 1,
  "content_margin": 0,
  "tab_overlap": 0,
  "tab_width": 128,
  "tab_min_width": 48,
  "tab_height": 36
},
// Tab element
{
  "class": "tab_control",
  "content_margin": [8, 0],
  "max_margin_trim": 0,
  "hit_test_level": 0,
  "layer0.texture": "",
  "layer0.tint": [{{ toRgb(ui.colors.tabs.tab) }}],
  "layer0.inner_margin": [5, 5],
  "layer0.opacity": 1
},
// Tab hover state
{
  "class": "tab_control",
  "attributes": ["hover"]
},
// Tab active state
{
  "class": "tab_control",
  "attributes": ["selected"],
  "layer0.texture": "",
  "layer0.tint": [{{ toRgb(ui.colors.tabs.active) }}],
},
// Tab label
{
  "class": "tab_label",
  "font.face": "{{ fonts.fontFace }}",
  "color": [{{ toRgb(ui.colors.tabs.textColor) }}]
},
