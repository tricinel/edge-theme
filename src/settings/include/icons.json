/* Icons
* Icons for the sidebar, tabs and panels
========================================================================= */
{
  "class": "icon_folder",
  "content_margin": [7, 5],
  "layer0.tint": [33, 33, 33],
  "layer0.opacity": 0,
  "layer1.texture": "{{paths.assets}}/icons/{{id}}/folder.png",
  "layer1.opacity": 1,
  "layer2.texture": "{{paths.assets}}/icons/{{id}}/folder-expanded.png",
  "layer2.opacity": 0.0,
  "layer3.texture": "{{paths.assets}}/icons/{{id}}/folder-hover.png",
  "layer3.opacity": 0.0,
},
{
  "class": "icon_folder",
  "parents": [{ "class": "tree_row", "attributes": ["expanded"] }],
  "layer1.opacity": 0.0,
  "layer2.opacity": 1.0,
  "layer3.opacity": 0.0,
},
{
  "class": "icon_folder",
  "parents": [{ "class": "tree_row", "attributes": ["hover"] }],
  "layer1.opacity": 0.0,
  "layer2.opacity": 0.0,
  "layer3.opacity": 1.0,
},
{
  "class": "icon_folder",
  "parents": [{ "class": "tree_row", "attributes": ["selected"] }],
  "layer1.texture": "{{paths.assets}}/icons/{{id}}/folder-expanded.png",
},
// Symlink folder icon
{
  "class": "icon_folder_dup",
  "layer0.texture": "{{paths.assets}}/icons/{{id}}/folder-symlink.png",
  "layer0.opacity": 1.0,
  "content_margin": [11, 7]
},

{
  "class": "icon_folder_dup",
  "parents":
  [{ "class": "tree_row", "attributes": ["hover"] }],
  "layer0.texture": "{{paths.assets}}/icons/{{id}}/folder-symlink-hover.png"
},

{
  "class": "icon_folder_dup",
  "parents": [{"class": "tree_row", "attributes": ["expanded"] }],
  "layer0.texture": "{{paths.assets}}/icons/{{id}}/folder-symlink-expanded.png"
},
// Opened files
{
  "class": "close_button",
  "content_margin": [8, 8],

  // Default Close icon
  "layer0.texture": "{{paths.assets}}/icons/{{id}}/file-close.png",
  "layer0.opacity": { "target": 0.0, "speed": 7.0, "interpolation": "smoothstep" },
  "layer0.inner_margin": [0,0],

  // Hover close icon
  "layer1.texture": "{{paths.assets}}/icons/{{id}}/file-close-active.png",
  "layer1.opacity": 0,
  "layer1.inner_margin": [0,0],
},

  // Opened file hover

{
  "class": "close_button",
  "parents":
  [
    { "class": "tree_row", "attributes": ["hover"] }
  ],
  // Default Close icon
  "layer0.texture": "{{paths.assets}}/icons/{{id}}/file-close.png",
  "layer0.opacity": { "target": 1.0, "speed": 7.0, "interpolation": "smoothstep" },
  "layer0.inner_margin": [0,0],
},

{
  "class": "close_button",
  "attributes": ["dirty"],
  "layer0.texture": "{{paths.assets}}/icons/{{id}}/file-dirty.png",
  "layer0.opacity": 1.0,
},

{
  "class": "close_button",
  "attributes": ["hover"],
  "layer0.opacity": 0,
  "layer1.opacity": 1.0
},
// Tab icons
{
  "class": "tab_close_button",
  "content_margin": [8, 8],

   // Close Icon
  "layer0.texture": "{{paths.assets}}/icons/{{id}}/file-close.png",
  "layer0.opacity": 1,
  "layer0.inner_margin": 0,

  // Close Icon Hover
  "layer1.texture": "{{paths.assets}}/icons/{{id}}/file-close-active.png",
  "layer1.opacity": { "target": 0.0, "speed": 5.0, "interpolation": "smoothstep" },

   // Dirty Icon
  "layer2.texture": "{{paths.assets}}/icons/{{id}}/file-dirty.png",
  "layer2.inner_margin": 0,

  // Dirty Icon Hover
  "layer3.texture": "{{paths.assets}}/icons/{{id}}/file-dirty-active.png",
  "layer3.opacity": { "target": 0.0, "speed": 5.0, "interpolation": "smoothstep" }
},
// Selected Tab
{
  "class": "tab_close_button",
  "parents": [{"class": "tab_control", "attributes": ["selected"]}],
  "layer0.opacity": 0, // Close Icon
  "layer1.opacity": 1, // Close Icon Hover
},
// Default hover
{
  "class": "tab_close_button",
  "attributes": ["hover"],
  "layer0.opacity": 0, // Close Icon
  "layer1.opacity": 1, // Close Icon Hover
},
// Dirty tab
{
  "class": "tab_close_button",
  "parents": [{"class": "tab_control", "attributes": ["dirty"]}],
  "layer0.opacity": 0, // Close Icon
  "layer1.opacity": 0, // Close Icon Hover
  "layer2.opacity": 0, // Dirty Icon
  "layer3.opacity": 1, // Dirty Icon Hover
},
// Dirty tab on hover
{
  "class": "tab_close_button",
  "parents": [{"class": "tab_control", "attributes": ["dirty"]}],
  "attributes": ["hover"],
  "layer0.opacity": 0, // Close Icon
  "layer1.opacity": 1, // Close Icon Hover
  "layer2.opacity": 0, // Dirty Icon
  "layer3.opacity": 0  // Dirty Icon Hover
},
// Selected dirty tab
{
  "class": "tab_close_button",
  "parents": [{"class": "tab_control", "attributes": ["selected", "dirty"]}],
  "layer0.opacity": 0, // Close Icon
  "layer1.opacity": 0, // Close Icon Hover
  "layer2.opacity": 0, // Dirty Icon
  "layer3.opacity": 1  // Dirty Icon Hover
},
// Selected dirty tab on hover
{
  "class": "tab_close_button",
  "parents": [{"class": "tab_control", "attributes": ["selected", "dirty"]}],
  "attributes": ["hover"],
  "layer0.opacity": 0, // Close Icon
  "layer1.opacity": 1, // Close Icon Hover
  "layer2.opacity": 0, // Dirty Icon
  "layer3.opacity": 0  // Dirty Icon Hover
},
// tab set scroll left | scroll right
{
  "class": "scroll_tabs_left_button",
  "content_margin": [10, 9],
  "layer0.texture": "{{paths.assets}}/icons/{{id}}/arrow-left.png",
  "layer0.opacity": 1.0,
  "layer0.inner_margin": 0,
  "layer1.texture": "{{paths.assets}}/icons/{{id}}/arrow-left-active.png",
  "layer1.opacity": { "target": 0.0, "speed": 8.0, "interpolation": "smoothstep" },
  "layer1.inner_margin": 0,
},
{
  "class": "scroll_tabs_left_button",
  "attributes": ["hover"],
  "layer1.opacity": { "target": 1.0, "speed": 8.0, "interpolation": "smoothstep" }
},
{
  "class": "scroll_tabs_right_button",
  "content_margin": [10, 9],
  "layer0.texture": "{{paths.assets}}/icons/{{id}}/arrow-right.png",
  "layer0.opacity": 1.0,
  "layer0.inner_margin": 0,
  "layer1.texture": "{{paths.assets}}/icons/{{id}}/arrow-right-active.png",
  "layer1.opacity": { "target": 0.0, "speed": 8.0, "interpolation": "smoothstep" },
  "layer1.inner_margin": 0,
},
{
  "class": "scroll_tabs_right_button",
  "attributes": ["hover"],
  "layer1.opacity": { "target": 1.0, "speed": 8.0, "interpolation": "smoothstep" }
},
{
  "class": "show_tabs_dropdown_button",
  "content_margin": [8, 12],
  "layer0.texture": "{{paths.assets}}/icons/{{id}}/overflow-menu.png",
  "layer0.opacity": 1.0,
  "layer0.inner_margin": 0,
  "layer1.texture": "{{paths.assets}}/icons/{{id}}/overflow-menu-active.png",
  "layer1.opacity": { "target": 0.0, "speed": 8.0, "interpolation": "smoothstep" },
  "layer1.inner_margin": 0
},
{
  "class": "show_tabs_dropdown_button",
  "attributes": ["hover"],
  "layer1.opacity": { "target": 1.0, "speed": 8.0, "interpolation": "smoothstep" }
},
// Code folding
{
  "class": "fold_button_control",
  "layer0.texture": "{{paths.assets}}/icons/{{id}}/fold-right.png",
  "layer0.opacity": 1.0,
  "layer0.inner_margin": 0,
  "layer1.texture": "{{paths.assets}}/icons/{{id}}/fold-right-active.png",
  "layer1.opacity": 0.0,
  "layer1.inner_margin": 0,
  "content_margin": [9, 7, 8, 6]
},

{
  "class": "fold_button_control",
  "attributes": ["hover"],
  "layer0.opacity": 0.0,
  "layer1.opacity": 1.0
},

{
  "class": "fold_button_control",
  "attributes": ["expanded"],
  "layer0.texture": "{{paths.assets}}/icons/{{id}}/fold-down.png",
  "layer1.texture": "{{paths.assets}}/icons/{{id}}/fold-down-active.png"
},
