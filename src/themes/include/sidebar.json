/* SIDEBAR
 * Sidebar panel settings and behavioring
 ========================================================================= */

// Sidebar container
{
  "class": "sidebar_container",
  // "layer0.texture": "",
  "layer0.opacity": 1,
  "layer0.tint": [{{ toRgb(ui.colors.background) }}],
  "layer0.inner_margin": [1,5,2,1],
  "content_margin": [0,4,0,0]
},
// Sidebar tree
{
  "class": "sidebar_tree",
  "row_padding": [8,4],
  "indent": 12,
  "indent_offset": 14,
  "indent_top_level": false
},
// Sidebar rows
{
  "class": "tree_row",
  // "layer0.texture": "",
  "layer0.tint": [{{ toRgb(ui.colors.highlight) }}],
  "layer0.opacity": 0,
  "layer0.inner_margin": [1,1]
},
// Sidebar row selected
{
  "class": "tree_row",
  "attributes": ["selected"],
  "layer0.opacity": 1
},
// Sidebar heading
{
  "class": "sidebar_heading",
  "color": [{{ toRgb(ui.colors.textColor) }}]
},
// Sidebar heading selected
{
  "class": "sidebar_heading",
  "parents": [{"class": "tree_row","attributes": ["selected"]}],
  "shadow_offset": [0,0]
},
// Sidebar entry
{
  "class": "sidebar_label",
  "color": [{{ toRgb(ui.colors.textColor) }}],
  "font.face": "{{ fonts.fontFace }}"
},
{
  "class": "sidebar_label",
  "settings": ["edge_sidebar_font_small"],
  "font.size": 10.0
},
{
  "class": "sidebar_label",
  "settings": ["edge_sidebar_font_normal"],
  "font.size": 11.0
},
{
  "class": "sidebar_label",
  "settings": ["edge_sidebar_font_large"],
  "font.size": 12.0
},
{
  "class": "sidebar_label",
  "settings": ["edge_sidebar_font_xlarge"],
  "font.size": 14.0
},
// Sidebar folder entry
{
  "class": "sidebar_label",
  "parents": [{"class": "tree_row","attributes": ["expandable"]}]
},
{
  "class": "sidebar_label",
  "parents": [{"class": "tree_row","attributes": ["hover"]}],
  "color": [{{ toRgb(ui.colors.textHighlightColor) }}]
},
{
  "class": "sidebar_label",
  "parents": [{"class": "tree_row","attributes": ["expandable"]}]
},
// Sidebar entry selected
{
  "class": "sidebar_label",
  "parents": [{"class": "tree_row","attributes": ["selected"]}],
  "color": [{{ toRgb(ui.colors.textColor) }}]
},
// Tab labels
{
  "class": "tab_label",
  "fade": true,
  "fg": [101, 115, 127] // 03
},
{
  "class": "tab_label",
  "parents": [{"class": "tab_control","attributes": ["hover"]}],
  "fg": [192, 197, 206] // 05
},
{
  "class": "tab_label",
  "parents": [{"class": "tab_control","attributes": ["selected"]}],
  "fg": [223, 225, 232] // 06
},
{
  "class": "tab_label",
  "attributes": ["transient"],
  "font.italic": true
},

// Tab Labels font size
{
  "class": "tab_label",
  "settings": ["spacegray_tabs_font_small"],
  "font.size": 10.0
},
{
  "class": "tab_label",
  "settings": ["spacegray_tabs_font_normal"],
  "font.size": 11.0
},
{
  "class": "tab_label",
  "settings": ["spacegray_tabs_font_large"],
  "font.size": 12.0
},
{
  "class": "tab_label",
  "settings": ["spacegray_tabs_font_xlarge"],
  "font.size": 14.0
},
