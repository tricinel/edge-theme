
/* EMPTY WINDOW
 * Style for empty (no tabs) window
========================================================================= */

{
  "class": "sheet_container_control",
  "layer0.tint": [{{ toRgb(ui.colors.background) }}],
  "layer0.opacity": 1.0
},

/* GRID LAYOUT
 * Grid style
========================================================================= */

{
  "class": "grid_layout_control",
  "border_size": 1,
  "border_color": [{{ toRgb(ui.colors.borderColor) }}]
},

// TITLE BAR
// App title bar
// =========================================================================

{
  "class": "title_bar",
  "fg": [{{ toRgb(ui.colors.foreground) }}],
  "bg": [{{ toRgb(ui.colors.background) }}]
},
